datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Product {
    id         Int        @id @default(autoincrement())
    sku        String     @unique
    title      String
    createdAt  DateTime   @default(autogenerated())
    updatedAt  DateTime   @updatedAt
    categories Category[]
    stocks     Stock[]
}

model Category {
    id        Int       @id @default(autoincrement())
    slug      String    @unique
    title     String
    createdAt DateTime  @default(autogenerated())
    updatedAt DateTime  @updatedAt
    products  Product[]
}

model Stock {
    id            Int            @id @default(autoincrement())
    uuid          String         @unique
    title         String
    createdAt     DateTime       @default(autogenerated())
    updatedAt     DateTime       @updatedAt
    products      Product[]
    productStocks ProductStock[]
}

model ProductStock {
    id        Int      @id @default(autoincrement())
    productId Int      @references(model: Product)
    stockId   Int      @references(model: Stock)
    quantity  Int
    createdAt DateTime @default(autogenerated())
    updatedAt DateTime @updatedAt
}
